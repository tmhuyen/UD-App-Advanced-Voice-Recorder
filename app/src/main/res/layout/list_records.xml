<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/layout_bg">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:id="@+id/playIcon"
            android:src="@drawable/baseline_play_arrow_48">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/recordName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/playIcon"
            android:fontFamily="@font/poppins_semibold"
            android:text="Name of the record"
            android:textColor="@color/md_theme_surfaceContainerHighest_highContrast"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/recordInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordName"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/playIcon"
            android:fontFamily="@font/poppins_regular"
            android:text="Information of the record | Time of the record"
            android:textColor="@color/md_theme_surfaceContainerHighest_highContrast"
            android:textSize="15sp"
            android:maxLines="1"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>